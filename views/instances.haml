%h1 Instances
%table.datatable.table.table-bordered.table-striped
  %thead
    %tr
      %th Player Name
      %th Otserv
      %th FPS
      %th Graphics Card
      %th Graphics Version
      %th Version
      %th Commit
      %th Online
  %tbody
    - @instances.each do |instance|
      %tr
        - if instance.last_player
          %td= instance_link instance.id, instance.last_player.name
          %td= instance.last_player.otserv ? instance.last_player.otserv.name : "null"
        - else
          %td= instance_link instance.id, "null"
          %td null
        %td= "#{instance.fps}"
        %td= "#{instance.graphics_renderer}"
        %td= "#{instance.graphics_version}"
        %td= "#{instance.build_version} #{instance.build_revision}"
        %td= "#{instance.build_commit}"
        - if instance.online
          %td.on ON
        - else
          %td.off OFF
