%span= will_paginate @players, :renderer => BootstrapPagination::Sinatra

.box
  .box-title Players
  .box-content.nopadding
    = haml :_search, :layout => false
    %table.datatable.table.table-bordered.table-striped
      %thead
        %tr
          %th Player Name
          %th Otserv
          %th Minutes Played
          %th Online
      %tbody
        - @players.each do |player|
          %tr
            - unless player.instance.nil?
              %td= instance_link player.instance.id, player.name
            %td= otserv_link player.otserv.id, player.otserv.name
            %td= player.minutes_played
            - if player.online
              %td.on ON
            - else
              %td.off OFF
